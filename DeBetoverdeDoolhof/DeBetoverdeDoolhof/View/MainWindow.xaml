            <Image Grid.Row="2" Source="/Resources/controls/rotate.png" Width="40"/>

            <TextBlock Grid.Column="1" Grid.Row="3" Text="speler aan de beurt" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Black" FontSize="20"/>

            <Image Source="/Resources/wizards/blue_wizard.png" Grid.Column="1" Grid.Row="4"/>

            <Button Grid.Column="1" Grid.Row="5" Content="spelregels" HorizontalAlignment="Center" Padding="20 0 20 0" Margin="0 10 0 10" Click="Button_Click_Rules" />
            <Button Grid.Column="1" Grid.Row="6" Content="toon schatkaart" HorizontalAlignment="Center" Padding="20 0 20 0" Margin="0 10 0 10" Click="Button_Click_Treasures"/>
